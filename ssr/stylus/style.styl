html
  position relative
  height 100%

body
  background-color #f7f7f7
  cursor default
  height 100%

footer
  border-top 1px solid black

header
  background-color #ededed


.container
  margin-bottom 3rem
  max-width 50rem

h1
  margin-bottom 4rem

.my-ul
  list-style none
  margin-bottom 0

.my-li
  cursor pointer
  display inline
  padding-right 1.5rem

.my-li:hover
  text-decoration underline black

.separator-line
  text-align center
  border-top 1px solid lightgray
  margin-bottom 5rem

.rounded-xl
  border-radius 7%

.avatar
  border-radius 50%
  border 0.2rem solid lightgray

.footer-icon
  width 1rem
  color light-gray

.hobby
 margin-bottom 2rem

.emoji
  font-size 2rem
  margin-bottom 0


.project-link-icon
  width 1.5rem

.footer-link
  color gray

.project-card
  border-radius 0.5rem
  padding 2rem
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
.project-card-interactive
    transition: all .2s ease-in-out
    &:hover
      cursor pointer
      transform: scale(1.05);
    &:active
      background-color #f5f5f5
      transform: scale(0.95);

.project-image
  transition: all .4s ease-in-out
  filter: grayscale(50%)
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);
  &:hover
    cursor pointer
    filter: none
    transform: scale(1.1)

.project-link
  font-size 1.5rem
  color gray